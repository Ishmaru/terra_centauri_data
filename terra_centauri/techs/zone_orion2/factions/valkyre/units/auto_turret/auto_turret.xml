<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<count-in-victory-conditions value="false"/>
		<size value="2"/>
		<height value="2"/>
		<max-hp value="1500" regeneration="0"/>
		<max-ep value="20" regeneration="1"/>
		<armor value="100"/>	
		<armor-type value="metal"/>				
		<sight value="1"/>
		<time value="150"/>	
		<multi-selection value="false"/>	
		<cellmap value="false"/>
		<levels>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements/>
		<upgrade-requirements/>
		<resource-requirements/>
		<resources-stored/>
		<image path="../../../../icons/turret.bmp"/>
		<image-cancel path="../../../../icons/stop.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">	
		</selection-sounds>
		<command-sounds enabled="true">
		</command-sounds>
   		<tags>
			<tag value="land" />
   		</tags>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="10"/>
			<animation path="auto/autoturretstand.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="220"/>
			<anim-speed value="50"/>
			<animation path="auto/autoturretstand.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="180"/>
			<animation path="auto/autoturretshoot.g3d"/>
			<particles value="true">
				<particle-file path="gun_muzzle1.xml"/>
				<particle-file path="grunt_mflash1.xml"/>
			</particles>
			<sound enabled="true" start-time="0.0">
				<sound-file path="shoot.wav"/>

			</sound>
			<attack-strenght value="250"/>
			<attack-var value="100"/>
			<attack-range value="8"/>
			<attack-type value="pierce"/>
			<attack-start-time value="0.5"/>
			<attack-fields>
				<field value="land"/>
				<field value="air"/>
			</attack-fields>
			<projectile value="false"/>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="gun_hit.xml"/>

			</splash>
		</skill>


		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="70"/>
			<animation path="auto/mechboom.g3d"/>
			<particles value="true" start-time="0.0" end-time="0.6">
				<particle-file path="expl_small.xml"/>
				<particle-file path="expl_small2.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/expl.wav"/>
				<sound-file path="sounds/expl.wav"/>					
			</sound>				
			<fade value="false"/>
			<shake enabled="true" intensity="70" duration="150" start-time="0.0">
				<self enabled="true" visible="true" in-camera-view="true" camera-distance-affected="true"/>
				<team enabled="true" visible="true" in-camera-view="true" camera-distance-affected="true"/>
				<enemy enabled="true" visible="true" in-camera-view="true" camera-distance-affected="true"/>
			</shake>
		</skill>





	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../../../../icons/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>


		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../../../../icons/attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>



		
	</commands>
</unit>